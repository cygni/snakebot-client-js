{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "node16",
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "preserveValueImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true,
    "experimentalResolver": true
  }
}
